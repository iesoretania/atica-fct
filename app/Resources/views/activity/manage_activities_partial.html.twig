{% trans_default_domain 'activity' %}
<div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover">
        <thead>
        <tr>
            {{ m.paginator_th(elements, 'col-md-2', 'a.code', 'form.code'|trans) }}
            {{ m.paginator_th(elements, 'col-md-8', 'a.name', 'form.name'|trans) }}
            <th class="col-md-2"></th>
        </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td>{{ element.code }}</td>
                <td>{{ element.name }}</td>
                <td class="text-center">
                    <div class="btn-group btn-group-xs btn-block" role="group">
                    {% block buttons %}
                        <a href="{{ path('admin_program_activity_form', {'id': element.id}) }}" class="btn btn-default col-xs-12"><i class="fa fa-pencil"></i> {{ 'form.detail' | trans }}</a>
                    {% endblock %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'form.no_activities'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="3">{{ m.paginator_stats(elements) }}</th>
        </tr>
        </tfoot>
    </table>
</div>
<div class="navigation">
    {{ knp_pagination_render(elements) }}
</div>
