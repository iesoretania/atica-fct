{% trans_default_domain 'student' %}
{% extends 'layout.html.twig' %}
{% import '::macros.html.twig' as m %}

{% block content %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ m.start_button }}
        {{ m.submit_button('submit', 'check', 'btn-success', 'form.submit'|trans) }}
        {{ m.end_button }}
    {{ form_end(form) }}
    {{ m.link_button(path('admin_group_students', {'id': user.studentGroup.id}), 'arrow-left', 'btn-default', 'form.back'|trans) }}
    {% if is_granted('ROLE_ADMIN') %}
        {{ m.link_button(path('frontpage', {'_switch_user': user.username}), 'user-secret', 'btn-warning', 'form.impersonate'|trans) }}
    {% endif %}
{% endblock %}
