{% trans_default_domain 'expense' %}
<div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover">
        <thead>
        <tr>
            <th class="col-md-2">{{ 'form.date'|trans }}</th>
            <th class="col-md-4">{{ 'form.route'|trans }}</th>
            <th class="col-md-2">{{ 'form.mileage'|trans }}</th>
            <th class="col-md-1">{{ 'form.reviewed'|trans }}</th>
            <th class="col-md-1">{{ 'form.paid'|trans }}</th>
            <th class="col-md-2"></th>
        </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td><strong>{{ loop.index }}. </strong>&nbsp;{{ element.date|date('d/m/Y') }}</td>
                <td>{{ element.route }}</td>
                <td>{{ element.distance|number_format }} km.</td>
                <td>{{ (element.reviewed ? 'form.yes' : 'form.no')|trans }}</td>
                <td>{{ (element.paid ? 'form.yes' : 'form.no')|trans }}</td>
                <td class="text-center">
                    <div class="btn-group btn-group-xs btn-block" role="group">
                    {% block buttons %}
                        <a href="{{ path('expense_form', {'id': tutor.id, 'expense': element.id}) }}" class="btn btn-default col-xs-12 col-sm-12"><i class="fa fa-pencil"></i> {{ 'form.view' | trans }}</a>
                    {% endblock %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'form.no_expenses'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
