{% trans_default_domain 'agreement' %}
<table class="table table-bordered table-condensed table-hover table-responsive">
    <thead>
    <tr>
        {% for column in columns %}
        {{ m.paginator_th(elements, 'col-md-' ~ column.size, column.sort_field, column.name|trans) }}
        {% endfor %}
        <th class="col-md-3"></th>
    </tr>
    </thead>
    <tbody>
    {% for element in elements %}
        <tr>
            <td>{{ element.student.lastName }}</td>
            <td>{{ element.student.firstName}}</td>
            <td>{{ element.student.studentGroup }}</td>
            <td>{{ element.workcenter }}</td>
            <td class="text-center">
                <div class="btn-group btn-group-xs btn-block" role="group">
                {% block buttons %}
                    <a href="{{ path('admin_agreement_form', {'id': element.id}) }}" class="btn btn-default col-xs-12 col-sm-6"><i class="fa fa-pencil"></i> {{ 'form.view' | trans }}</a>
                    <a href="{{ path('admin_agreement_delete', {'id': element.id}) }}" class="btn btn-danger col-xs-12 col-sm-6" ><i class="fa fa-trash"></i> {{ 'form.delete' | trans }}</a>
                {% endblock %}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th colspan="5">{{ m.paginator_stats(elements) }}</th>
    </tr>
    </tfoot>
</table>
<div class="navigation">
    {{ knp_pagination_render(elements) }}
</div>
