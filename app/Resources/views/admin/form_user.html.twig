{% trans_default_domain 'user' %}
{% extends 'layout.html.twig' %}
{% import '::macros.html.twig' as m %}

{% block content %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}
    {{ m.link_button(path('admin_users'), 'arrow-left', 'btn-default', 'form.back'|trans) }}
    {% if user.id and is_granted('ROLE_ADMIN') %}
        {{ m.link_button(path('frontpage', {'_switch_user': user.username}), 'user-secret', 'btn-warning', 'form.impersonate'|trans) }}
    {% endif %}
{% endblock %}
