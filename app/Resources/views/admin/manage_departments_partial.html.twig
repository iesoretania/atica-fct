{% trans_default_domain 'admin' %}
<table class="table table-bordered table-condensed table-hover table-responsive">
    <thead>
    <tr>
        {{ m.paginator_th(elements, 'col-md-5', 'd.name', 'department.name'|trans) }}
        {{ m.paginator_th(elements, 'col-md-3', 'p.displayName', 'department.head'|trans) }}
        <th class="col-md-3"></th>
    </tr>
    </thead>
    <tbody>
    {% for department in elements %}
        <tr>
            <td>{{ department.name }}</td>
            <td>{{ department.head.person }}</td>
            <td class="text-center">
                <div class="btn-group btn-group-xs btn-block" role="group">
                {% block buttons %}
                    <a href="{{ path('admin_department_form', {'department': department.id}) }}" class="btn btn-default col-xs-12 col-sm-6"><i class="fa fa-sitemap"></i> {{ 'form.view' | trans }}</a>
                    <a href="{{ path('admin_department_delete', {'department': department.id}) }}" class="btn btn-danger col-xs-12 col-sm-6" ><i class="fa fa-trash"></i> {{ 'form.delete' | trans }}</a>
                {% endblock %}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th colspan="4">{{ m.paginator_stats(elements) }}</th>
    </tr>
    </tfoot>
</table>
<div class="navigation">
    {{ knp_pagination_render(elements) }}
</div>
