{% macro paginator_th(pagination, class, field, caption) %}
    <th class="{{ class }} {% if pagination.isSorted(field) %}sorted{% endif %}">{{ knp_pagination_sortable(pagination, caption, field) }}</th>
{% endmacro %}

{% macro paginator_stats(pagination) %}
    {{ 'showing'|trans({
        '%first%': min((pagination.getCurrentPageNumber-1)*pagination.getItemNumberPerPage+1, pagination.getTotalItemCount),
        '%last%': min((pagination.getCurrentPageNumber)*pagination.getItemNumberPerPage, pagination.getTotalItemCount),
        '%total%': pagination.getTotalItemCount }, 'messages') }}
{% endmacro %}

{% macro start_button() %}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
{% endmacro %}

{% macro end_button() %}
        </div>
    </div>
{% endmacro %}

{% macro submit_button(name, icon = null, class = 'btn-success', caption) %}
    <button type="submit" name="{{ name }}" class="btn btn-sm-block {{ class }}">{% if icon %}<i class="fa fa-{{ icon }}"></i> {% endif %}{{ caption }}</button>
{% endmacro %}

{% macro link_button(href, icon = null, class = 'btn-success', caption, id = null) %}
    <a href="{{ href }}" class="btn btn-sm-block {{ class }}"{% if id %} id="{{ id }}"{% endif %}>{% if icon %}<i class="fa fa-{{ icon }}"></i> {% endif %}{{ caption }}</a>
{% endmacro %}
