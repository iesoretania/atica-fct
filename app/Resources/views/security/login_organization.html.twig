{% trans_default_domain "security" %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% extends ':security:login_base.html.twig' %}

{% block title %}{{ 'form.organization.title'|trans }}{% endblock %}

{% block login_title %}{{ 'form.organization.title'|trans }}{% endblock %}

{% block login_content %}
<form method="post" action="{{ path('login_organization') }}" role="form">
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_errors(form.organization) }}
        {{ form_widget(form.organization) }}
    </div>
    <div class="form-group">
        <button type="submit" name="login" class="btn btn-info btn-block" tabindex="5">{{ 'form.organization.submit'|trans }}</button>
    </div>
    {{ form_end(form) }}
</form>
{% endblock %}
